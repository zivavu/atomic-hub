---
import { Image } from 'astro:assets';
import type { Article } from './types/Article';

export type ArticleProps = {
	articles: Article[];
};

const { articles } = Astro.props as ArticleProps;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
	{
		articles.map((article) => (
			<a
				href={`/artykuly/${article.slug}`}
				class="block rounded-lg overflow-hidden border border-gray-300 hover:border-gray-400 transition shadow hover:shadow-md no-underline text-black dark:text-white dark:bg-gray-900 dark:hover:bg-gray-700">
				<div class="relative pb-48 overflow-hidden">
					<Image
						src={article.data.cover}
						alt={article.data.coverAlt}
						class="absolute inset-0 h-full w-full object-cover"
					/>
				</div>
				<div class="p-4">
					<h4 class="text-xl font-semibold mb-2">{article.data.title}</h4>
					<p class="text-gray-600 dark:text-gray-400 mb-4">
						{article.data.description}
					</p>
					<div class="text-sm text-gray-500 dark:text-gray-400">
						Tagi:
						{article.data.tags.map((tag) => (
							<span class="inline-block bg-gray-200 dark:bg-gray-700 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 dark:text-gray-300 mr-2 mb-2">
								#{tag}
							</span>
						))}
					</div>
				</div>
			</a>
		))
	}
</div>
